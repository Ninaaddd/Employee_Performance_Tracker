# ============================================================================
# .env.example - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
#
# To use: cp .env.example .env
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite Database Path (local file)
DB_PATH=./employee_project.db

# MongoDB Configuration
# Get your connection string from MongoDB Atlas:
# 1. Go to mongodb.com/cloud/atlas
# 2. Create a cluster (free tier available)
# 3. Click "Connect" â†’ "Connect your application"
# 4. Copy the connection string and replace <password> with your actual password
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# MongoDB Database Name
MONGO_DB=performance_reviews

# MongoDB Collection Name (optional, default is 'reviews')
MONGO_DB_COLLECTION=reviews

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application Title (displayed in browser tab)
APP_TITLE=Employee Performance Tracker

# Debug Mode (set to True for development, False for production)
DEBUG_MODE=False

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# STREAMLIT CONFIGURATION (Optional)
# ============================================================================

# These can be set here or in .streamlit/config.toml

# Server Port
# STREAMLIT_SERVER_PORT=8501

# Server Address (use 0.0.0.0 to allow external access)
# STREAMLIT_SERVER_ADDRESS=localhost

# Enable CORS (set to True if accessing from different domain)
# STREAMLIT_SERVER_ENABLE_CORS=False

# ============================================================================
# SECURITY (Optional - for production deployments)
# ============================================================================

# Secret key for session management (generate a random string)
# SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated list for production)
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================================================
# BACKUP CONFIGURATION (Optional)
# ============================================================================

# Automatic backup location
# BACKUP_PATH=./backups

# Backup retention days
# BACKUP_RETENTION_DAYS=30

# ============================================================================
# LOGGING (Optional)
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Log File Path
# LOG_FILE=./logs/app.log

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable/disable specific features
# FEATURE_EXPORT_ENABLED=True
# FEATURE_BULK_IMPORT_ENABLED=True
# FEATURE_EMAIL_NOTIFICATIONS=False

# ============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================================================

# Email configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourcompany.com

# ============================================================================
# PERFORMANCE (Optional)
# ============================================================================

# Cache TTL in seconds
# CACHE_TTL=300

# Maximum upload file size in MB
# MAX_UPLOAD_SIZE=10

# Database connection pool size
# DB_POOL_SIZE=5

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Never commit the actual .env file to version control
# 2. Add .env to your .gitignore file
# 3. Each developer/environment should have their own .env file
# 4. For production, use environment variables or secrets management
# 5. MongoDB Atlas connection string format:
#    mongodb+srv://username:password@cluster.mongodb.net/dbname
# 6. Make sure to URL-encode special characters in passwords
#
# ============================================================================